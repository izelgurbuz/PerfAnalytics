{
  "name": "perfanalytics",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "NODE_ENV=development && cd dashboard && npm i && NODE_ENV=production && CI=false npm run build && cd ..",
    "test": "jest --verbose --coverage=false --testTimeout=10000 && npm run test:fe:dashboard",
    "test:be:coverage": "jest --collectCoverage=true",
    "test:fe:dashboard": "cd dashboard && npm run test && cd ..",
    "server": "nodemon index.js",
    "client": "cd dashboard && npm install && npm start",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "start": "nodemon index.js",
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^6.2.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "mongoose": "^5.13.2",
    "nodemon": "^2.0.12",
    "uuidv4": "^6.2.11"
  },
  "devDependencies": {
    "eslint": "^7.9.0",
    "husky": "^4.3.0",
    "jest": "^26.6.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "src/*.js"
    ],
    "modulePathIgnorePatterns": [
      "dashboard"
    ]
  }
}
