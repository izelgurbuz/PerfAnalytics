{
  "name": "perfanalytics",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "postinstall": "NODE_ENV=development  &&  npm i --prefix dashboard && NODE_ENV=production && npm run build --prefix dashboard",
    "test": "jest --verbose --coverage=false",
    "test:be:coverage": "jest --collectCoverage=true",
    "server": "nodemon index.js",
    "client": "npm install --prefix dashboard && npm start --prefix dashboard",
    "dev": "concurrently \"npm run server\" \"npm run client\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^6.2.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "jest": "^27.0.6",
    "mongoose": "^5.13.2",
    "nodemon": "^2.0.12",
    "uuidv4": "^6.2.11"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.js",
      "src/*.js"
    ],
    "modulePathIgnorePatterns": [
      "dashboard"
    ]
  }
}
